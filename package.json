{
  "name": "silent-watcher",
  "version": "0.1.0",
  "description": "A robust WhatsApp bot that silently monitors and logs all WhatsApp activities with comprehensive audit trails and real-time web interface",
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop silent-watcher",
    "pm2:restart": "pm2 restart silent-watcher",
    "pm2:logs": "pm2 logs silent-watcher"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "monitoring",
    "audit",
    "logging",
    "typescript",
    "react",
    "dashboard"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.18",
    "@hapi/boom": "^10.0.1",
    "better-sqlite3": "^11.5.0",
    "express": "^5.0.1",
    "winston": "^3.17.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "date-fns": "^4.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.12",
    "@types/better-sqlite3": "^7.6.11",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "typescript": "^5.8.4",
    "tsx": "^4.19.2",
    "tsc-alias": "^1.8.10",
    "rimraf": "^6.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "pm2": "^5.4.3"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.33.5"
    }
  }
}
